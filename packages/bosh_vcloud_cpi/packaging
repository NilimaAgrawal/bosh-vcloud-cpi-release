set -e -x

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}

export PATH=${BOSH_PACKAGES_DIR}/ruby_vcloud_cpi/bin:$PATH
export GEM_HOME=${BOSH_INSTALL_TARGET}/gem_home

mkdir -p ${BOSH_INSTALL_TARGET}/{bin,gem_home}

cd bosh_vcloud_cpi

gem_cmd="$BOSH_PACKAGES_DIR/ruby_vcloud_cpi/bin/gem install \
  --local    \
  --verbose  \
  --no-ri    \
  --no-rdoc  \
  --wrappers \
  --bindir ${BOSH_INSTALL_TARGET}/bin \
  --install-dir ${GEM_HOME}"

$gem_cmd bosh_vcloud_cpi